{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env.*local"
  ],
  "pipeline": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**",
        ".next/**",
        "!.next/cache/**"
      ]
    },
    "db:migrate:deploy": {},
    "db:migrate:dev": {},
    "db:push": {},
    "db:seed": {},
    "lint": {},
    "generate": {
      "dependsOn": [
        "^generate"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}